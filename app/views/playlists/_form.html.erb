<%= form_for @playlist, :html => {class: "form-inline"} do |f| %>
  <% if @playlist.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@playlist.errors.count, "error") %> prohibited this playlist from being saved:</h2>

      <ul>
      <% @playlist.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= field_set_tag "" do %>
    <div class="control-group">
      <%= f.label :name %><br />
      <%= f.text_field :name, class: "input-xlarge" %>
    </div>
  <% end %>

  <%= field_set_tag "Add Songs" do %>
    <div class="control-group content-scroll">
      <% Song.all.sort_by {|i| i.artist.sort_name.downcase}.each do |song| %>
        <%= check_box_tag 'song_ids[]', song.id, false, {:"data-toggle" => "checkbox"} %>
        <%= label_tag 'song[name]', song.print(nil, true, nil, false) %><br>
      <% end %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "#{@action} Playlist", class: "btn btn-primary" %>
  </div>
<% end %>
