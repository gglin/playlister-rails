<% if !notice.nil? %>
  <p id="notice" class="alert alert-success"><%= notice %></p>
<% end %>

<div  class="content-scroll">
  <ol>
    <% Artist.top_artists.each do |artist| %>
      <li>
        <div class="hoverable">
          <pre><%= link_to artist %><span class="admin">  | <%= link_to "Edit", edit_artist_path(artist) %> | <%= link_to 'Delete', artist, method: :delete, data: { confirm: 'Are you sure?' } %></span></pre>
        </div>
      </li>
    <% end %>
  </ol>

</div>

<br>