<% if !notice.nil? %>
  <p id="notice" class="alert alert-success"><%= notice %></p>
<% end %>
<h1>Most Played Artists</h1>
<p><i>The week of <%= Date.today.at_beginning_of_week.to_formatted_s(:long_ordinal) %></i></p>
<div  class="content-scroll">
  <ol>
    <% Artist.top_artists.each do |artist| %>
      <li>
        <div class="hoverable">
          <pre><%= link_to artist %></pre>
        </div>
      </li>
    <% end %>
  </ol>

</div>

<br>